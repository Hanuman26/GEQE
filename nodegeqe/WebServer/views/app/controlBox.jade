div.tabs(id="tabs" ng-controller="tabsController")
   ul.tab-links
      li(ng-repeat="tab in tabs" ng-class="{active:isActiveTab(tab.url)}" ng-click="onClickTab(tab)")
         a {{tab.title}}
   div( id="mainView")
      div(id="controlBox" class="tab-content" ng-include="currentTab")

script(type="text/ng-template" id="one.tpl.html")
   div.tab( id="viewOne" ng-controller="resultsTabController")
      div.container-fluid
         div.row
            div.col-lg-6
               span.inputItem Polygon Files:
               select.input-xs(name="polygonSelect" id="polygonSelect")
                  option( ng-repeat="item in polygonFiles" value="{{item}}") {{item}}
               button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-refresh(ng-click='populatePolygonSelect()' title="Refresh file list.")
               button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-pencil(ng-click="drawPolygonFile()" title="Draw polygons to the map.")

            div.col-lg-6
               span.inputItem Clear:
               button.inputItem.btn.btn-default.btn-xs(ng-click="clearResults()") Results
               button.inputItem.btn.btn-default.btn-xs(ng-click="clearShapes()") Shapes
               button.inputItem.btn.btn-default.btn-xs(ng-click="clearMarkers()") Markers
               button.inputItem.btn.btn-default.btn-xs(ng-click="clearAll()") All
         div.row
            div.col-lg-6
               span.inputItem Score Files:
               select.input-xs( name="scoreSelect" id="scoreSelect")
                  option( ng-repeat="item in scoreFiles" value="{{item}}") {{item}}
               button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-refresh(ng-click="popScore()" title="Refresh file list.")
               button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-pencil(ng-click="gatherScores()" title="Load scores.")

         div.row
            div.col-lg-2
               span.inputItem  Max Points:
               input( id="sMaxEntries" value="-1" style="width:40px")
            div.col-lg-4
               label(for="sBinSize")
                  span.inputItem Bin Size:
                  input(type="text" id="sBinSize" value=".005" style="width:40px")
         div.row
            div.col-lg-2
               input(type="checkbox" checked=true id="aggScores" name="aggScores")
               label(for='aggScores')
                  span.inputItem  Bin by Lat-Lon
            div.col-lg-2
               label(for='aggTime')
                  input( type="checkbox" id="aggTime" name="aggTime")
                  span.inputItem  Bin as time series

         div.row
            div.col-lg-4
               label(for='uniqueUser')
                  input(type="checkbox" id="uniqueUser")
                  span.inputItem  Count only unique users


script( type="text/ng-template" id="two.tpl.html")
   div.tab( id="viewTwo" ng-controller="runTabController")
      div.container-fluid
         div.row
            div.col-lg-4
               b.inputItem Data Set:
               select(id="dataSetSelect" onchange="newCenter()")
                  option( ng-repeat="item in dataSets" value="{{item}}") {{item}}
            div.col-lg-4
               a(href="http://scc.silverdale.dev:7180/cmf/home" target="_blank" style="target-new: tab;") View Progress
         div.row
            div.col-lg-4
               div.input-group
                  div.input-group-btn
                     button.pull-right.btn.btn-xs.btn-default.dropdown-toggle(type="button" data-toggle="dropdown" aria-expanded="false")
                        span.caret
                     ul.scrollable-menu.dropdown-menu(role="menu")
                        li(ng-repeat="item in polygonFiles" ng-click="polyFileSelected(item)" value="{{item}}") {{item}}
                  input.input-xs(type="text" ng-model="polyFile" id="pFileName" value="polyFile.json")
                  button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-refresh(ng-click="populatePolygonSelect()" title="Refresh file list.")
                  button.inputItem.btn.btn-default.btn-xs.glyphicon.glyphicon-floppy-disk(ng-click="saveList()" title= "Save Polygon File")
            div.col-lg-4
               input(type="text" id="pSavePath" readonly="True" disabled)
         div.row
            div.col-lg-4
               button.btn.btn-default.btn-xs(ng-click="applyScores()") Apply Scores
            div.col-lg-4
               input(id="sFileName" value="scores.csv")
            div.col-lg-4
               div(id="rankReturnInput") Return top:
                  input(id="sTopN" value="300" style="width:50px")
               div( id="percentReturnInput" class="invis") Return Percent:
                  input( id="sTopPercent" value="0.0001" style="width:50px")
         div.row
            div.col-lg-4
               label(for='bAdvanced')
                  input( type="checkbox" id="bAdvanced" ng-click="toggleAdv()")
                  | Show Advanced Options
         div.row(id="hr1" class="invis")
            div.col-lg-4
               label(for='bPercent')
                  input(type="checkbox" id="bPercent" ng-click="modReturn()")
                  | Limit Return by Percent
         div.row( id="hr4" class="invis")
            div.col-lg-4
               label(for='useML')
                  input(type="checkbox" checked=true id="useML")
                  | Use M.L. Scoring
            div.col-lg-4 Feature Vector Max Length
            div.col-lg-4
               input( type="text" id="nFeat" value="300")
         div.row( id="hr5" class="invis")
            div.col-lg-4
               label(for='useBayes')
                  input( type="checkbox" id="useBayes")
                  | Sort by Bayes (when ML)
         div.row( id="hr3" class="invis")
            div.col-lg-4
               label(for='timeSeries')
                  input( type="checkbox" id="timeSeries")
                  | Time Series polygon

         div.row( id="hr2" class="invis")
            div.col-lg-4 Custom Stop Words
            div.col-lg-4
               input( type="text" id="cStopW")
script( type="text/ng-template" id="three.tpl.html")
   div.tab( id="viewThree" ng-controller="testTabController")
      table( style="width:100%")
         tr
            td
               button.btn.btn-default.btn-xs(ng-click="launchTest()") Cross Validate
            td
               input( type="text" id="tFileName" value="testSummary.csv")
            td
               a(href="http://scc.silverdale.dev:7180/cmf/home" target="_blank" style="target-new: tab;") View Progress
         tr
            td
               button.btn.btn-default.btn-xs(ng-click="gatherTest()") Get Results
            td Mean:
               input( id="inMean" type="text" readonly="True" value="Test Mean" style="width:65px")
            td Variance:
               input( id="inVar" type="text" readonly="True" value="Test Var" style="width:60px")
