div( ng-controller='detailsController')
    div(ng-style="$parent.style" id='details')
        div
            nav.navbar.navbar-default.navbar-inverse
                h4.navbar-brand.my-navbar-brand {{displayIndex}} of {{data.nTotal}} Items
                span(ng-click='previous()' title='Previous').noselect.navbar-button.btn-lg.glyphicon.glyphicon-backward.navbar-left.navbar-text
                span(ng-click='next()' title='Next').noselect.navbar-button.btn-lg.glyphicon.glyphicon-forward.navbar-right.navbar-text
            img.img-responsive.detailsImg(src="http://localhost:3000/images/blank.png")
            h3.text-center {{currentItem.usr}}
        div
            p score: {{currentItem.sco}}
            div.caption
            p(id="caption")
