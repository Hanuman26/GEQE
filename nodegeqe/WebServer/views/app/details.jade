div( ng-controller='detailsController')
   div(ng-style="$parent.style" id='details')
      div
         nav
            h3 {{displayIndex}} of {{data.nTotal}} Items
            ul.pagination.resultsNav
               li(ng-click="previous()")
                  a(href="#" aria-label="Previous")
                     span( aria-hidden="true" ) &laquo;
               li(ng-click="next()")
                  a(href="#" aria-label="Next")
                     span( aria-hidden="true" ) &raquo;
      div.container-fluid
         div.row
            div.col-lg-1
            div.col-lg-10
               img.img-responsive.detailsImg(src="http://localhost:3000/images/blank.png")
            div.col-lg-1
         div.row
            div.col-lg-1
            div.col-lg-10
                  h3 {{currentItem.usr}}
                  p score: {{currentItem.sco}}
                  div.caption
                  p(id="caption")
            div.col-lg-1
